# Production Environment Configuration
# Copy this to .env for production deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE-THIS-TO-SUPER-SECURE-SECRET-KEY-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# User Management Service (Production)
USER_SERVICE_URL=https://your-user-management-service.com
USER_SERVICE_TIMEOUT=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Auth Tokens Service
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/auth_tokens

# Logging
LOG_LEVEL=info

# CORS (restrict in production)
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com